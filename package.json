{
  "name": "mashery-toolbelt",
  "version": "2.0.37",
  "description": "CLI tool for Mashery API Management provisioning",
  "main": "index.js",
  "scripts": {
    "lint": "prettier-standard {src,test}/*.js {src,test}/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "jest": "jest",
    "test": "npm run lint && npm run jest",
    "test:ci": "npm run lint && npm run jest -- --ci --testResultsProcessor=\"jest-junit\" --runInBand",
    "tdd": "npm run jest -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adidas-group/mashery-provision.git"
  },
  "bin": {
    "mashery-toolbelt": "bin/mashery-toolbelt"
  },
  "keywords": [
    "Mashery",
    "API",
    "HTTP",
    "Swagger"
  ],
  "author": "Zdenek Nemec",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adidas-group/mashery-provision/issues"
  },
  "homepage": "https://github.com/adidas-group/mashery-provision#readme",
  "dependencies": {
    "adidas-mashery-client": "1.0.0-alpha.0",
    "casex": "0.0.3",
    "cli-spinner": "^0.2.6",
    "commander": "2.12.2",
    "dotenv": "^4.0.0",
    "each-props": "1.3.1",
    "inquirer": "4.0.0",
    "isobject": "3.0.1",
    "jsondiffpatch": "0.3.7",
    "merge-options": "1.0.1",
    "node-fetch": "^1.7.2",
    "pluralize": "7.0.0",
    "prop-types": "15.6.1",
    "swagger-parser": "4.0.1",
    "url-pattern": "1.0.3",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "husky": "^1.0.0-rc.8",
    "jest": "21.2.1",
    "jest-junit": "3.6.0",
    "lint-staged": "7.1.0",
    "nock-vcr-recorder": "0.1.5",
    "prettier-standard": "8.0.0",
    "standard": "11.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test}/**/*.js": [
        "prettier-standard",
        "git add"
      ],
      "{src,test}/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
